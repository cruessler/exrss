<%= form_for @changeset,
      user_path(@conn, :create),
      fn f -> %>
  <h1>Register</h1>

  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= email_input f, :email %>
  <%= error_tag f, :email %>

  <%= password_input f, :password %>
  <%= error_tag f, :password %>

  <%= password_input f, :password_confirmation %>

  <button type="submit">Register</button>
<% end %>
